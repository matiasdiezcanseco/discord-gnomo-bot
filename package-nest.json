{
  "name": "discord-gnomo-bot",
  "version": "1.0.2",
  "description": "",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    // Original Express implementation (unchanged)
    "dev:express": "tsx --env-file=.env.local --watch src/index.ts",
    "build:express": "tsup src/index.ts --format esm --dts",
    "start:express": "node dist/index.js",

    // New NestJS implementation
    "dev:nest": "nest start --watch --path src",
    "build:nest": "nest build --path src",
    "start:nest": "node dist/main.js",

    // Development and production (NestJS as default)
    "dev": "nest start --watch --path src",
    "build": "nest build --path src",
    "start": "nest start --path src",
    "start:prod": "node dist/main.js",
    "launch": "flyctl launch",
    "deploy": "fly deploy --ha=false",
    "fly:redis": "fly redis connect",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix"
  },
  "author": "Matias Diez-Canseco",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^3.0.12",
    "@discordjs/opus": "^0.10.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/platform-express": "^11.1.12",
    "@tavily/core": "^0.7.1",
    "ai": "^6.0.39",
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ioredis": "^5.9.2",
    "node-cron": "^4.2.1",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "tsup": "^8.5.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@types/express": "^5.0.6",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^25.0.9",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-prettier": "^5.5.5",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
